// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "code --enable-proposed-api",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}" , "--logPluginHostCommunication"],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out/src"
        },
        {
            "name": "Launch Extension with vscode from source",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder:vscode}/scripts/code.sh --enable-proposed-api",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}" , "--logPluginHostCommunication"],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out/src"
        }

    ]
}