// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "code",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--logPluginHostCommunication",
      ],

      "sourceMaps": true,
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Launch Enterprise Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "code",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--logPluginHostCommunication",
        "--disable-extensions"
      ],
      "sourceMaps": true,
      "preLaunchTask": "npm: build:enterprise"
    },
    {
      "name": "Launch Extension with vscode from source",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder:vscode}/scripts/code.sh",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--logPluginHostCommunication"
      ],
      "sourceMaps": true,
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Launch Extension with vscode from source",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder:vscode}/scripts/code.sh",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--logPluginHostCommunication"
      ],
      "sourceMaps": true,
      "preLaunchTask": "npm: build"
    },{
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
      ],
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "npm: pretest"
    }
  ]
}
